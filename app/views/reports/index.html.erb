<p id="notice"><%= notice %></p>

<h1>Reports</h1>
<div class="table-responsive-lg">
  <table class="table">
    <thead>
      <tr>
        <th>Purchase name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Count</th>
        <th>Address</th>
        <th>Merchant name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.purchaser_name %></td>
          <td><%= report.item_description %></td>
          <td><%= report.item_price %></td>
          <td><%= report.purchase_count %></td>
          <td><%= report.merchant_address %></td>
          <td><%= report.merchant_name %></td>
          <td><%= link_to 'Show', report %></td>
          <td><%= link_to 'Edit', edit_report_path(report) %></td>
          <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Report', new_report_path %>


<h3>Import data-file</h3>
<%=form_tag import_reports_path, multipart: true, class:"upload_tab" do%>
  <%=file_field_tag :file, accept: "text/tab", class: "file_input", id:"file"%>
  <%=submit_tag "Upload Reports"%>
<% end %>